<% provide(:title, "Home")  %>
<% if logged_in? %>
  <div class="row">
    <aside class="panel col-md-3">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
   <div class="col-md-8">
      <h3>Feed</h3>
      <% if @feeds.nil? %>
      <div class = "feed">
      <%= render @feed_items %>
      </div>
      <% end %>
    </div>
  </div>
<% else %>
<div class="center jumbotron" id="welcome">
  <h1>Welcome to Shelf</h1>
  <h4>Start building your digital library right now! </h4>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>



