<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.shelves.any? %>
      <h3>Shelves (<%= @user.shelves.count %>)</h3>
      <ol class="shelves">
        <%= render @user.shelves %>
      </ol>
    <% end %>
  </div>


</div>
